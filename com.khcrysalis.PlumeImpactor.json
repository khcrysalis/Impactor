{
    "app-id": "com.khcrysalis.PlumeImpactor",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "25.08",
    "sdk": "org.freedesktop.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable",
        "org.freedesktop.Sdk.Extension.llvm21"
    ],
    "command": "plumeimpactor",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=system-bus",
        "--device=all",
        "--talk-name=org.freedesktop.Notifications"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin:/usr/lib/sdk/llvm21/bin",
        "prepend-ld-library-path": "/usr/lib/sdk/llvm21/lib",
        "build-args": [
            "--share=network"
        ],
        "env": {
            "CARGO_HOME": "/run/build/plumeimpactor/cargo"
        }
    },
    "modules": [
        {
            "name": "plumeimpactor",
            "buildsystem": "simple",
            "build-commands": [
                "cargo --offline fetch --manifest-path Cargo.toml --verbose",
                "cargo build --bin plumeimpactor --release --verbose",
                "install -Dm755 ./target/release/plumeimpactor -t /app/bin/",
                "install -Dm644 ./package/flatpak/${FLATPAK_ID}.desktop -t /app/share/applications/",
                "install -Dm644 ./package/flatpak/${FLATPAK_ID}.metainfo.xml -t /app/share/metainfo/",
                "install -Dm644 ./package/flatpak/icons/hicolor/16x16/apps/${FLATPAK_ID}.png -t /app/share/icons/hicolor/16x16/apps/",
                "install -Dm644 ./package/flatpak/icons/hicolor/32x32/apps/${FLATPAK_ID}.png -t /app/share/icons/hicolor/32x32/apps/",
                "install -Dm644 ./package/flatpak/icons/hicolor/48x48/apps/${FLATPAK_ID}.png -t /app/share/icons/hicolor/48x48/apps/",
                "install -Dm644 ./package/flatpak/icons/hicolor/64x64/apps/${FLATPAK_ID}.png -t /app/share/icons/hicolor/64x64/apps/",
                "install -Dm644 ./package/flatpak/icons/hicolor/128x128/apps/${FLATPAK_ID}.png -t /app/share/icons/hicolor/128x128/apps/",
                "install -Dm644 ./package/flatpak/icons/hicolor/256x256/apps/${FLATPAK_ID}.png -t /app/share/icons/hicolor/256x256/apps/"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                },
                "cargo-sources.json"
            ]
        }
    ]
}
